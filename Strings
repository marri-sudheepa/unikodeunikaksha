#UPPER CASE AND LOWER CASE
a=input()
b=0
c=0
for i in a:
    if(i.islower()):
        b=b+1
    if(i.isupper()):
        c=c+1
print(c)
print(b)


#COUNT THE WORD AND CHARACTER
n=input()
words=1
letters=0
for i in n:
    letters=letters+1
    if(i==" "):
        words=words+1
print(words)
print(letters)


#CHARACTER OR DIGIT
n=input()
digit=0
char=0
for i in n:
    if(i.islower() or i.isupper()):
        char=char+1
    if(i.isdigit()):
        digit=digit+1
print("Characters=",char)
print("Digits=",digit)
    
    
#SORTED CHARACTERS
n=input()
print(''.join(sorted(n)))

    
#FIRST AND LAST TWO LETTERS
n=input()
a=n[0:2]
b=n[-2:]
c=a+b
print(c)


#NTH INDEX OF A STRING
a=input()
n=int(input())
first=a[:n]
last=a[n+1:]
b=first+last
print(b)


#REPLACE NTH CHARACTER
a=input()
to_replace=input()
replaced = input()
new_string = ''
for elem in a:
    if elem == to_replace:
        new_string += replaced
    else:
        new_string += elem
print("Modified string:")
print(new_string)
        
    
#REMOVE NTH INDEX CHARACTER
a=input()
n=int(input())
first=a[:n]
last=a[n+1:]
b=first+last
print(b)
    









    
    
    
    
    
    
    
    
    
    
    


